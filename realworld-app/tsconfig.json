{
  "exclude" : [
    "esm",
    "dist",
    "node_modules",
    "**/*.spec.ts*"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "lib": ["es2016", "dom", "es6", "dom.iterable", "scripthost"],
    "pretty": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "baseUrl": "src",
  "paths": {
    "lodash/*": [
      "node_modules/@types/lodash-es/*"
    ]
  }
}
